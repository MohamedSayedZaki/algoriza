{% extends 'base.html.twig' %}

{% block title %}Get All Products!{% endblock %}

{% block body %}
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
						<h2>Manage <b>Products</b></h2>
					</div>
                    <div class="col-sm-4">
                        <form class="navbar-form navbar-left" action="/product/search" method="post">
                            <div class="form-group">
                                <input type="text" name="search" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>                    
                </div>
            </div>
            {% if products %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
						<th>Category</th>
                        <th>Tags</th>
                        <th>Picture</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.Description }}</td>
						<td>{{ product.category }}</td>
                        <td>{{ product.tags }}</td>
                        <td><img src="{{ asset(image_dir ~ product.picture) }}" width="100"></td>
                        <td>
                            <a href="{{ path('app_product_edit',{'id': product.id}) }}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="{{ path('app_product_remove',{'id': product.id}) }}" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
                <h2>No <b>Products</b> Found</h2>
            {% endif %}
        </div>
    </div>
{% endblock %}
